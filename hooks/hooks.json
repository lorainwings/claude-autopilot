{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$(dirname \"$0\")/../scripts/check-predecessor-checkpoint.sh\""
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$(dirname \"$0\")/../scripts/validate-json-envelope.sh\""
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$(dirname \"$0\")/../scripts/scan-checkpoints-on-start.sh\""
          }
        ]
      }
    ]
  }
}
